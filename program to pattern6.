import java.util.*;
class Pattern6{
    public static void main(String args[]){
        Scanner sc=new Scanner(System.in);
        System.out.print("Enter n value:");
        int n=sc.nextInt();
        int row,col;
        for(row=0;row<n;row++){
            for(col=0;col<n-row-1;col++){
                System.out.print(" ");
            }
            System.out.print(" ");
            for(col=0;col<=row;col++){
                System.out.print(" "+"*"+" " );

            }
            System.out.println();
        }
    }
}
