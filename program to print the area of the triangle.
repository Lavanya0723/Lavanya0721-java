import java.util.*;
class Triangle{
    public static void main(String args[]){
        Scanner sc=new Scanner(System.in);
        System.out.print("Enter height value:");
        int h=sc.nextInt();
        System.out.print("Enter breadth value:");
        int b=sc.nextInt();
        double area;
        area=0.5*h*b;
        System.out.println(area);
    }
}
